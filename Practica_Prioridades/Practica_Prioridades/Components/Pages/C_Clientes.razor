@page "/CClientes"
@inject ClientesBLL clientesBLL

<h2>Consulta Clientes</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Tel&eacute;fono</th>
                <th>Celular</th>
                <th>Rnc</th>
                <th>Email</th>
                <th>Direcci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
            @if (ListClientes.Count > 0)
            {
                @foreach (var item in ListClientes)
                {
                    <tr>
                        <td>@item.ClienteId</td>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Celular</td>
                        <td>@item.Rnc</td>
                        <td>@item.Email</td>
                        <td>@item.Direccion</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No hay clientes</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    public Clientes clientes { get; set; } = new Clientes();
    public List<Clientes> ListClientes { get; set; } = new List<Clientes>();
    public int filtrar { get; set; }

    protected async override void OnInitialized()
    {
        ListClientes = await clientesBLL.Listar(t => true);
    }

    public async void Buscar()
    {
        if (filtrar > 0)
        {
            ListClientes = await clientesBLL.Listar(t => t.ClienteId == filtrar);
        }
        else
        {
            ListClientes = await clientesBLL.Listar(t => true);
        }
    }

    public async void Recargar()
    {
        ListClientes = await clientesBLL.Listar(t => true);
    }
}
